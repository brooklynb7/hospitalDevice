extends ../layout.jade

block content
	div.panel.panel-default.col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2.col-lg-6.col-lg-offset-3
		div.panel-body
			form.form-horizontal.signinForm
				fieldset
					legend 用户登录
					div.form-group
						label.col-lg-2.control-label(for='inputUsername') 用户名
						div.col-lg-10
							input.form-control#inputUsername(type='text', placeholder='请填写用户名')
					div.form-group
						label.col-lg-2.control-label(for='inputPassword') 密码
						div.col-lg-10
							input.form-control#inputPassword(type='password', placeholder='请填写密码')
					div.text-right
						button.btn.btn-primary#signinBtn(type='button') 登录
					div.signinMsg.text-danger.text-right
block extraScripts
	script(type='text/javascript', src='/static/javascripts/users/signin.js')